    <!-- Script para o FAQ Interativo -->
    <script>
        /**
         * Fun√ß√£o para alternar a visibilidade do conte√∫do do FAQ.
         * @param {number} id - O ID num√©rico do item do FAQ (1, 2, 3...).
         */
        function toggleFaq(id) {
            const button = document.querySelector(`.faq-button[aria-controls="content-${id}"]`);
            const content = document.getElementById(`content-${id}`);

            // Verifica se o conte√∫do est√° vis√≠vel
            const isExpanded = button.getAttribute('aria-expanded') === 'true';

            if (isExpanded) {
                // Fechar
                content.classList.add('hidden');
                button.setAttribute('aria-expanded', 'false');
                content.setAttribute('aria-hidden', 'true');
            } else {
                // Abrir
                content.classList.remove('hidden');
                button.setAttribute('aria-expanded', 'true');
                content.setAttribute('aria-hidden', 'false');

                // Opcional: Fechar outros itens (comportamento de acorde√£o)
                const allContents = document.querySelectorAll('.faq-content');
                const allButtons = document.querySelectorAll('.faq-button');

                allContents.forEach(item => {
                    if (item.id !== `content-${id}`) {
                        item.classList.add('hidden');
                        item.setAttribute('aria-hidden', 'true');
                    }
                });

                allButtons.forEach(btn => {
                    if (btn !== button) {
                        btn.setAttribute('aria-expanded', 'false');
                    }
                });
            }
        }
    </script>

