    <script>
        // Plan data
        const plans = {
            monthly: {
                name: 'Mensual',
                price: '24,90€',
                period: '/mes',
                description: 'Acceso mensual a todo el contenido'
            },
            annual: {
                name: 'Anual',
                price: '249,99€',
                period: '/año',
                description: 'Ahorra 48€ al año con acceso anual'
            },
            complete: {
                name: 'Completo',
                price: '399,99€',
                period: 'único',
                description: 'Acceso completo de por vida + garantía de devolución'
            }
        };

        // Navigation functions
        function showSection(sectionId) {
            document.querySelectorAll('.section-content').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            window.location.hash = sectionId;
        }

        function showSectionAndClose(sectionId) {
            showSection(sectionId);
            document.getElementById('mobileMenu').classList.remove('active');
        }

        function toggleMobileMenu() {
            document.getElementById('mobileMenu').classList.toggle('active');
        }

        function showLoginModalAndClose() {
            showLoginModal();
            document.getElementById('mobileMenu').classList.remove('active');
        }

        function showRegisterModalAndClose() {
            showRegisterModal();
            document.getElementById('mobileMenu').classList.remove('active');
        }

        // Modal functions
        function showLoginModal() {
            document.getElementById('loginModal').classList.remove('hidden');
        }

        function showRegisterModal() {
            document.getElementById('registerModal').classList.remove('hidden');
        }

        function showPaymentModal(planType) {
            const plan = plans[planType];
            if (plan) {
                document.getElementById('selectedPlan').value = planType;
                document.getElementById('paymentPlanDisplay').innerHTML = 
                    `<strong>${plan.name}</strong> - ${plan.price} ${plan.period}<br>
                    <small class="text-gray-600">${plan.description}</small>`;
                document.getElementById('paymentModal').classList.remove('hidden');
            }
        }

        function handleLogin(e) {
            e.preventDefault();
            document.getElementById('loginModal').classList.add('hidden');
            showSuccessMessage();
        }

        function handleRegister(e) {
            e.preventDefault();
            const name = document.getElementById('registerName').value;
            const email = document.getElementById('registerEmail').value;
            
            // Store registration data
            saveRegistrationData('register', { name, email, plan: 'free_trial' });
            
            document.getElementById('registerModal').classList.add('hidden');
            showSuccessMessage();
        }

        function handlePayment(e) {
            e.preventDefault();
            const formData = new FormData(document.getElementById('paymentForm'));
            const registrationData = {
                name: formData.get('name'),
                email: formData.get('email'),
                phone: formData.get('phone'),
                plan: formData.get('plan'),
                timestamp: new Date().toISOString(),
                status: 'pending_payment'
            };
            
            try {
                // Store the registration data
                saveRegistrationData('payment', registrationData);
                
                // Simulate successful payment processing
                setTimeout(() => {
                    document.getElementById('paymentModal').classList.add('hidden');
                    showSuccessMessage();
                    
                    // In a real implementation, you would redirect to payment gateway
                    // or send the data to your backend server
                    console.log('Registration data saved:', registrationData);
                    console.log('Would send email to:', registrationData.email);
                }, 1000);
                
            } catch (error) {
                console.error('Error processing payment:', error);
                showError();
            }
        }

        // Save registration data to localStorage (in production, send to backend)
        function saveRegistrationData(type, data) {
            const registrations = JSON.parse(localStorage.getItem('retoUniformeRegistrations') || '[]');
            registrations.push({
                id: Date.now(),
                type: type,
                data: data,
                createdAt: new Date().toISOString()
            });
            localStorage.setItem('retoUniformeRegistrations', JSON.stringify(registrations));
        }

        // Get all registrations (for admin use)
        function getRegistrations() {
            return JSON.parse(localStorage.getItem('retoUniformeRegistrations') || '[]');
        }

        function showSuccessMessage() {
            const successMsg = document.getElementById('successMessage');
            successMsg.classList.remove('hidden');
            setTimeout(() => {
                successMsg.classList.add('hidden');
            }, 5000);
        }

        function showError() {
            const errorMsg = document.getElementById('errorMessage');
            errorMsg.classList.remove('hidden');
            setTimeout(() => {
                errorMsg.classList.add('hidden');
            }, 5000);
        }

        // Close modals when clicking outside
        document.addEventListener('click', function(e) {
            const modals = ['loginModal', 'registerModal', 'paymentModal'];
            modals.forEach(modalId => {
                const modal = document.getElementById(modalId);
                if (e.target === modal) {
                    modal.classList.add('hidden');
                }
            });
        });

        // Test functionality
        let selectedAnswers = {};
        let currentQuestion = 0;

        function startTest() {
            selectedAnswers = {};
            currentQuestion = 1;
            showQuestion(1);
        }

        function showTestIntro() {
            document.querySelectorAll('.test-question').forEach(q => q.classList.remove('active'));
            document.getElementById('testIntro').classList.add('active');
        }

        function showQuestion(questionNum) {
            document.querySelectorAll('.test-question').forEach(q => q.classList.remove('active'));
            document.getElementById('question' + questionNum).classList.add('active');
            currentQuestion = questionNum;
        }

        function selectAnswer(questionNum, answer) {
            selectedAnswers[questionNum] = answer;
            document.getElementById('next' + questionNum).disabled = false;
            if (questionNum === 3) {
                document.getElementById('finish3').disabled = false;
            }
            
            const buttons = document.querySelectorAll(`#question${questionNum} button`);
            buttons.forEach(btn => {
                if (btn.textContent.includes(answer)) {
                    btn.classList.add('border-blue-500', 'bg-blue-100');
                } else {
                    btn.classList.remove('border-blue-500', 'bg-blue-100');
                }
            });
        }

        function nextQuestion(questionNum) {
            if (questionNum < 3) {
                showQuestion(questionNum + 1);
            }
        }

        function finishTest() {
            let correct = 0;
            if (selectedAnswers[1] === 'B') correct++;
            if (selectedAnswers[2] === 'C') correct++;
            if (selectedAnswers[3] === 'D') correct++;
            
            const score = Math.round((correct / 3) * 100);
            document.getElementById('scoreDisplay').textContent = score + '%';
            document.getElementById('scoreBar').style.width = score + '%';
            
            if (score === 100) {
                document.getElementById('scoreDisplay').className = 'text-4xl font-bold text-green-600 mb-4';
                document.getElementById('scoreBar').className = 'bg-green-500 h-3 rounded-full';
            } else if (score >= 60) {
                document.getElementById('scoreDisplay').className = 'text-4xl font-bold text-yellow-600 mb-4';
                document.getElementById('scoreBar').className = 'bg-yellow-500 h-3 rounded-full';
            } else {
                document.getElementById('scoreDisplay').className = 'text-4xl font-bold text-red-600 mb-4';
                document.getElementById('scoreBar').className = 'bg-red-500 h-3 rounded-full';
            }
            
            document.querySelectorAll('.test-question').forEach(q => q.classList.remove('active'));
            document.getElementById('results').classList.add('active');
        }

        function resetTest() {
            showTestIntro();
        }

        // Handle URL hash changes
        window.addEventListener('hashchange', function() {
            const hash = window.location.hash.substring(1);
            if (hash && document.getElementById(hash)) {
                showSection(hash);
            }
        });

        // Initialize based on URL hash
        window.addEventListener('load', function() {
            const hash = window.location.hash.substring(1);
            if (hash && document.getElementById(hash)) {
                showSection(hash);
            }
        });

        // Admin function to view registrations (for debugging)
        window.viewRegistrations = function() {
            const registrations = getRegistrations();
            console.log('All registrations:', registrations);
            alert(`Se han registrado ${registrations.length} personas. Revisa la consola para más detalles.`);
        };
    </script>
</body>
</html>
